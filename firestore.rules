rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User post actions (follow, save, hide, translate) - subcollection
      match /postActions/{postId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Analyses collection (existing)
    match /analyses/{analysisId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                              resource.data.userId == request.auth.uid;
    }
    
    // Community posts
    match /community_posts/{postId} {
      allow read: if true; // Public read
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                      (request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['upvotes', 'downvotes', 'commentCount', 'updatedAt', 'hotScore']) ||
                       resource.data.authorId == request.auth.uid);
      // Allow deletion by post author OR community creator
      // For community creator, we check if community exists and user is the creator
      allow delete: if request.auth != null && 
                      (resource.data.authorId == request.auth.uid ||
                       (resource.data.communityId != null && 
                        resource.data.communityId != '' &&
                        exists(/databases/$(database)/documents/communities/$(resource.data.communityId)) &&
                        get(/databases/$(database)/documents/communities/$(resource.data.communityId)).data.creatorId == request.auth.uid));
      
      // Translations subcollection (cached translations)
      match /translations/{lang} {
        allow read: if true; // Anyone can read cached translations
        allow create, update: if request.auth != null; // Authenticated users can cache translations
      }
    }
    
    // Comments
    match /comments/{commentId} {
      allow read: if true; // Public read
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                      (request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['upvotes', 'downvotes', 'replyCount']) ||
                       resource.data.authorId == request.auth.uid);
      // Allow deletion by comment author OR post author
      allow delete: if request.auth != null && 
                      (resource.data.authorId == request.auth.uid ||
                       resource.data.postAuthorId == request.auth.uid);
    }
    
    // Votes (for tracking user votes)
    match /votes/{voteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Communities
    match /communities/{communityId} {
      allow read: if true; // Public read
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
                      (request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['memberCount', 'postCount', 'updatedAt', 'weeklyVisitors', 'weeklyContributions', 'bannerUrl', 'iconUrl', 'imageUrl', 'moderators']) ||
                       resource.data.creatorId == request.auth.uid);
      allow delete: if request.auth != null &&
                      resource.data.creatorId == request.auth.uid;
      
      // Post reports subcollection
      match /postReports/{reportId} {
        allow read: if request.auth != null && 
                      (get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid ||
                       get(/databases/$(database)/documents/communities/$(communityId)).data.moderators != null);
        allow create: if request.auth != null; // Any authenticated user can report
        allow update, delete: if request.auth != null && 
                      get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid;
      }
      
      // Moderator requests subcollection
      match /modRequests/{requestId} {
        allow read: if request.auth != null &&
                      get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid;
        allow create: if request.auth != null; // Any authenticated user can request to be a mod
        allow update, delete: if request.auth != null && 
                      get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid;
      }
      
      // Moderator messages subcollection
      match /modMessages/{messageId} {
        allow read: if request.auth != null &&
                      (get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid ||
                       resource.data.fromUserId == request.auth.uid);
        allow create: if request.auth != null; // Any authenticated user can send a message to mods
        allow update, delete: if request.auth != null && 
                      get(/databases/$(database)/documents/communities/$(communityId)).data.creatorId == request.auth.uid;
      }
    }

    // Community achievements (per-user, per-community achievements)
    match /community_achievements/{achievementId} {
      allow read: if true; // Public read
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Community members
    match /community_members/{membershipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid; // Users can only read their own notifications
      allow create: if request.auth != null; // Any authenticated user can create notifications (for community posts)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid; // Users can only update their own notifications (e.g., mark as read)
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid; // Users can only delete their own notifications
    }
  }
}

